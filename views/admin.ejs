<div class="admin-panel">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="fas fa-cog me-2 text-primary"></i>
                Admin Panel
            </h1>
            <p class="text-muted mb-0">
                Viewing all submitted thoughts in chronological order
            </p>
        </div>
        <div>
            <span class="badge bg-primary fs-6">
                <%= thoughts.length %> Total Thoughts
            </span>
        </div>
    </div>
    
    <!-- Thoughts List -->
    <% if (thoughts.length > 0) { %>
        <div class="thoughts-container">
            <% thoughts.forEach(function(thought) { %>
                <div class="thought-card card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-calendar-alt me-2 text-muted"></i>
                            <span class="text-muted"><%= thought.formatted_date %></span>
                        </div>
                        <small class="text-muted">#<%= thought.id %></small>
                    </div>
                    
                    <div class="card-body">
                        <div class="thought-content">
                            <%- thought.content.replace(/\n/g, '<br>') %>
                        </div>
                        
                        <div class="thought-meta mt-3 pt-3 border-top">
                            <small class="text-muted">
                                <i class="fas fa-align-left me-1"></i>
                                <%= thought.content.length %> characters
                            </small>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- Pagination Info -->
        <div class="text-center mt-4">
            <p class="text-muted">
                <em>All thoughts are displayed in reverse chronological order</em>
            </p>
        </div>
        
    <% } else { %>
        <!-- Empty State -->
        <div class="empty-state text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
            <h4 class="text-muted">No Thoughts Yet</h4>
            <p class="text-muted">
                No anonymous thoughts have been submitted yet. Check back later!
            </p>
            <a href="/" class="btn btn-outline-primary">
                <i class="fas fa-home me-2"></i>
                Go to Home Page
            </a>
        </div>
    <% } %>
</div>